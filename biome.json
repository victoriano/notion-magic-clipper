{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/.next/**",
      "!**/out/**",
      "!**/.turbo/**",
      "!backend/.trigger/**",
      "!clients/web-extension/vendor/**",
      "!**/*.lock",
      "!**/*.min.*"
    ]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": false
  },
  "assist": { "actions": { "source": { "organizeImports": "off" } } }
}
